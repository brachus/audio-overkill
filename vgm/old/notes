


bool OpenVGMFile(const char* FileName)
{
	gzFile hFile;
	UINT32 FileSize;
	bool RetVal;
	
	FileSize = GetGZFileLength(FileName);
	
	hFile = gzopen(FileName, "rb");
	if (hFile == NULL)
		return false;
	
	RetVal = OpenVGMFile_Internal(hFile, FileSize);
	
	gzclose(hFile);
	return RetVal;
}


int main 
{
	VGMPlay_Init();
	ReadOptions(AppName);
	VGMPlay_Init2();
	
	Chips_GeneralActions(0x00);	// Start chips
	// also does Reset (0x01), Muting Mask (0x10) and Panning (0x20) //1017
	
	PlayVGM_UI();
	
	CloseVGMFile();
	
	VGMPlay_Deinit();
}


